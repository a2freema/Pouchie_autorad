number = {3},
pages = {185--194},
title = {{The Influence of Testosterone on Territorial Defence and Parental Behavior in Male Free-Living Rufous Whistlers, Pachycephala rufiventris}},
url = {http://journals.ohiolink.edu/ejc/article.cgi?issn=0018506x{\&}issue=v39i0003{\&}article=185{\_}tiototmfrwpr},
volume = {39},
